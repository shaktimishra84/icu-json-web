  "clinical_graph": {
    "title": "Suspected brain infection – ICU initial approach",
    "graph": {
      "nodes": [
        {
          "id": "n1",
          "type": "start",
          "text": "Suspected brain infection – ICU initial approach"
        },
        {
          "id": "n2",
          "type": "action",
          "text": "Stabilize ABCs; obtain two sets of blood cultures."
        },
        {
          "id": "n3",
          "type": "action",
          "text": "Start empiric antibacterial therapy immediately after blood cultures (do not delay for LP/CT)."
        },
        {
          "id": "n4",
          "type": "decision",
          "text": "If encephalitis/HSV suspected (temporal findings, seizures, CSF lymphocytes)",
          "condition": "HSV suspected"
        },
        {
          "id": "n5",
          "type": "action",
          "text": "Add IV acyclovir."
        },
        {
          "id": "n6",
          "type": "decision",
          "text": "If Listeria risk (age >50, pregnant, immunocompromised, alcoholism)",
          "condition": "Listeria risk"
        },
        {
          "id": "n7",
          "type": "action",
          "text": "Add ampicillin (Listeria coverage)."
        },
        {
          "id": "n8",
          "type": "action",
          "text": "Empiric antibacterial: ceftriaxone + vancomycin (per local protocol)."
        },
        {
          "id": "n9",
          "type": "action",
          "text": "Give dexamethasone with or just before the first antibiotic dose if pneumococcal meningitis is suspected."
        },
        {
          "id": "n10",
          "type": "decision",
          "text": "If signs of raised ICP, focal deficit, papilledema, new-onset seizure, or immunocompromised (CT before LP indicated)",
          "condition": "CT before LP indicated"
        },
        {
          "id": "n11",
          "type": "action",
          "text": "CT brain first."
        },
        {
          "id": "n12",
          "type": "decision",
          "text": "If mass effect/obstructive hydrocephalus or focal lesion on CT",
          "condition": "mass effect/obstructive hydrocephalus"
        },
        {
          "id": "n13",
          "type": "action",
          "text": "Defer LP; manage raised ICP; consult neurosurgery; continue targeted antimicrobials."
        },
        {
          "id": "n14",
          "type": "action",
          "text": "Perform lumbar puncture now."
        },
        {
          "id": "n15",
          "type": "action",
          "text": "CSF: opening pressure; cell count/diff; protein; glucose; Gram stain/culture; PCR as indicated."
        },
        {
          "id": "n16",
          "type": "action",
          "text": "Interpret CSF pattern and tailor therapy (bacterial vs viral vs TB/fungal)."
        },
        {
          "id": "n17",
          "type": "end",
          "text": "Ongoing ICU care per etiology; reassess response and complications."
        }
      ],
